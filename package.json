{
  "name": "ts-lib-template",
  "version": "0.0.1",
  "description": "一个 ts lib 的模板仓库，可以当做脚手架使用。",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "exports": {
    "require": "./build/main/index.js",
    "import": "./build/module/index.js"
  },
  "scripts": {
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:lint": "eslint src --ext .ts",
    "test:unit": "nyc --silent ava",
    "cov": "run-s build test:unit  cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sklme/ts-lib-template.git"
  },
  "author": "iskl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sklme/ts-lib-template/issues"
  },
  "homepage": "https://github.com/sklme/ts-lib-template#readme",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@iskl/eslint-plugin": "^1.1.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "ava": "^5.1.1",
    "eslint": "^8.33.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.1.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      },
      "compile": false
    },
    "files": [
      "!build/module/**"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
