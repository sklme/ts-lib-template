{
  "name": "@iskl/ts-lib-template",
  "version": "0.3.0",
  "description": "一个 ts lib 的模板仓库，可以当做脚手架使用。",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "exports": {
    "require": "./build/main/index.js",
    "import": "./build/module/index.js"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:lint": "eslint src --ext .ts",
    "test:unit": "nyc --silent ava",
    "cov": "run-s build test:unit  cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:check": "nyc report && nyc check-coverage --lines 80 --functions 80 --branches 80",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts  --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts  --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "commit": "cz",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i",
    "prepare-release": "run-s test cov:check doc:html version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sklme/ts-lib-template.git"
  },
  "author": "iskl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sklme/ts-lib-template/issues"
  },
  "homepage": "https://github.com/sklme/ts-lib-template#readme",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@iskl/eslint-plugin": "^1.1.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "ava": "^5.1.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.33.0",
    "gh-pages": "^5.0.0",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.1.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.3",
    "simple-git-hooks": "^2.8.1",
    "standard-version": "^9.5.0",
    "tsx": "^3.12.2",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      },
      "compile": false
    },
    "files": [
      "!build/module/**"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
